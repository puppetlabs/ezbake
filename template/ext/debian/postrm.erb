#!/bin/sh -e

case "$1" in
    purge)
        rm -rf /usr/share/<%= EZBake::Config[:project] %>

        # Remove <%= EZBake::Config[:project] %> log files
        rm -rf /var/log/<%= EZBake::Config[:project] %>
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)


        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

exit 0
