###########################################
# Init settings for <%= EZBake::Config[:project] %>
###########################################

# Location of your Java binary (version 7 or higher)
JAVA_BIN="/usr/bin/java"

# Modify this if you'd like to change the memory allocation, enable JMX, etc
JAVA_ARGS="<%= EZBake::Config[:java_args] %>"

# These normally shouldn't need to be edited if using OS packages
USER="<%= EZBake::Config[:user] %>"
INSTALL_DIR="/usr/share/<%= EZBake::Config[:project] %>"
CONFIG="/etc/<%= EZBake::Config[:project] %>/conf.d"
BOOTSTRAP_CONFIG="/etc/<%= EZBake::Config[:project] %>/bootstrap.cfg"
SERVICE_STOP_RETRIES=60
START_TIMEOUT=60
