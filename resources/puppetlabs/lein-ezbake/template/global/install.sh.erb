    install -d -m 0755 "${DESTDIR}${confdir}/logrotate.d"
    cp -pr ext/<%= EZBake::Config[:project] -%>.logrotate.conf "${DESTDIR}${confdir}/logrotate.d/<%= EZBake::Config[:project] %>"
}

